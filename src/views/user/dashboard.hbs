{{#extend 'stylesheets'}}

{{/extend}}

<div class="">
    <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="x_panel">
            <div class="x_title">
                <h2>All member</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i
                                class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Settings 1</a>
                            </li>
                            <li><a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>N/S</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td id="name{{_id}}">{{firstName}} {{middleName}} {{lastName}}</td>
                            <td id="email{{_id}}">{{email}}</td>
                            <td id="phone{{_id}}">{{phone}}</td>

                            <td>
                                {{!-- <button title="View Profile" data-toggle="modal" _userId="{{_id}}" , firstName="{{firstName}}"
                                    , middleName="{{middleName}}" lastName="{{lastName}}" email="{{email}}" phone="{{phone}}"
                                    address="{{address}}" gender="{{gender}}" passport="{{passport}}" data-target="#viewUser"
                                    class="btn btn-primary btn-sm">
                                    <i class="fa fa-eye"></i>
                                </button> --}}
                                <a href="/user/view/{{_id}}">
                                    <button title="View" class="btn btn-success btn-sm">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


