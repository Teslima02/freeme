                    <tr>
                        <th>N/S</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td id="name{{_id}}">{{firstName}} {{middleName}} {{lastName}}</td>
                        <td id="email{{_id}}">{{email}}</td>
                        <td id="phone{{_id}}">{{phone}}</td>

