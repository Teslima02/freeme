<script>

    function editmemberModal(id) {

        var name = $('#name' + id).html();
        var username = $('#username' + id).html();
        var email = $('#email' + id).html();
        var phone = $('#phone' + id).html();

        $('#ename').val(name);
        $('#eusername').val(username);
        $('#eemail').val(email);
        $('#ephone').val(phone);
        $("#editmemberModal").modal('show');
    }


    function banMember(id) {

        $.confirm({
            title: '<div style="color:red">Confirm!</div>',
            content: 'Are you sure you want to Perform this Action?',
            buttons: {
                confirm: function () {
                    ban_member(id);
                },
                cancel: function () {
                    $.alert('Canceled!');
                },
            }
        });
    }


    var ban_member = function (id) {

        $.ajax({
            type: "POST", // Post / Get method
            url: "/branch/ban", //Where form data is sent on submission
            dataType: "text", // Data type, HTML, json etc.
            data: { id: id }, //Form variables
            success: function (response) {

                if (response === "success") {
                    $.confirm({
                        title: '<div style="color:green">Success</div>',
                        content: 'Action Performed Successfully',
                        buttons: {
                            ok: function () {
                                location.reload(true)
                            },
                        }
                    });
                } else if (response === "fail") {

                    var msg = '<div class="alert alert-danger alert-dismissible fade in text-center" role="alert">' +
                        '<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span>' +
                        '</button>' +
                        'You Don\'t Have Access To Perform This Operation ' +
                        '</div>';

                    $('.accessMsg').html(msg).css('text-align: center');
                    $('.accessMsg').show().fadeOut(1000000);
                }
            }
        });
    }

    $(document).ready(function () {
        $("input[name='email']").keyup(function () {

            var email = $("input[name='email']").val();

            $.ajax({

                type: "POST", // Post / Get method
                url: "/branch/check/email", //Where form data is sent on submission
                dataType: "text", // Data type, HTML, json etc.
                data: { email: email }, //Form variables
                success: function (response) {

                    if (response === 'success') {
                        $('.exist').text('*E-mail already Exist*').css('color', 'red');
                    } else {
                        $('.exist').empty();
                    }
                }
            })
        })
    });


    $(document).ready(function () {
        $("input[name='username']").keyup(function () {

            var username = $("input[name='username']").val();

            console.log(username);

            $.ajax({

                type: "POST", // Post / Get method
                url: "/branch/check/username", //Where form data is sent on submission
                dataType: "text", // Data type, HTML, json etc.
                data: { username: username }, //Form variables
                success: function (response) {

                    if (response === 'success') {
                        $('.usernameExist').text('*Username already Exist*').css('color', 'red');
                    } else {
                        $('.usernameExist').empty();
                    }
                }
            })
        })
    });


</script>

